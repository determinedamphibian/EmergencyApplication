<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emergencyapplication">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmergencyApplication">
        <activity android:name=".FirstAidActivity"></activity>
        <activity android:name=".DisasterGuidelineButtonActivity" />
        <activity android:name=".GuidelineButtonActivity" />
        <activity android:name=".HelplineActivity" />
        <activity android:name=".EmergencyHotlineButtonActivity" />
        <activity android:name=".FireActivity" />
        <activity android:name=".MedicalActivity" />
        <activity
            android:name=".MainDashboardActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".SideDockContents.AboutUsSideDock"
            android:launchMode="singleTask" />
        <activity
            android:name=".SideDockContents.SirenAndFlickerLightSideDock"
            android:launchMode="singleTask" />
        <activity
            android:name=".SideDockContents.GovernmentAgenciesSideDock"
            android:launchMode="singleTask" />
        <activity
            android:name=".SideDockContents.TrustedContactsSideDock"
            android:launchMode="singleTask" />
        <activity android:name=".TrustedContactsActivites.TrustedContactDetailActivity" />
        <activity android:name=".TrustedContactsActivites.ViewActivity" />
        <activity android:name=".TrustedContactsActivites.InsertActivity" />
        <activity android:name=".CrimeActivity" />
        <activity android:name=".TrustedContactsActivity" />
        <activity android:name=".AnimationMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>