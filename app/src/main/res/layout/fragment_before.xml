<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Disasters.StormFragments.BeforeFragment"
    android:background="@color/white">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

  <LinearLayout
      android:layout_margin="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="10dp">

   <ImageView
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@drawable/radio" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_gravity="center"
       android:textSize="14sp"
       android:textColor="@color/black"
       android:text="Alamin ang balita ukol sa panahon at mga anunsyong pangkaligtasan."/>

  </LinearLayout>

  <LinearLayout
      android:layout_margin="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="10dp">

   <ImageView
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@drawable/checklist" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_gravity="center"
       android:textSize="14sp"
       android:textColor="@color/black"
       android:text="Alamin ang plano ng komunidad sa pagbibigay-babala at paglikas."/>

  </LinearLayout>

  <LinearLayout
      android:layout_margin="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="10dp">

   <ImageView
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@drawable/repair" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_gravity="center"
       android:textSize="14sp"
       android:textColor="@color/black"
       android:text="Suriin ang baha at kumpunihin ang mga mahina o sirang bahagi nito."/>

  </LinearLayout>

  <LinearLayout
      android:layout_margin="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="10dp">

   <ImageView
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@drawable/gobag" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_gravity="center"
       android:textSize="14sp"
       android:textColor="@color/black"
       android:text="Ihanda ang GO BAG na naglalaman ng mga pangangailangan ng pamilya."/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal">

   <ImageView
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@drawable/pet_house" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginLeft="10dp"
       android:textColor="@color/black"
       android:text="Ilikas ang mga alagang hayop sa ligtas na lugar."
       android:textSize="14sp" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal">

   <ImageView
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@drawable/evacuation" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginLeft="10dp"
       android:textColor="@color/black"
       android:text="Kapag inabisuhan ng kinauukulan, mabilis na lumikas sa itinakdang evacuation center."
       android:textSize="14sp" />

  </LinearLayout>

 </LinearLayout>

</ScrollView>