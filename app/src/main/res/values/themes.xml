<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmergencyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tertiaryLightDarker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/tertiaryLightDarker</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnBackground">@color/tertiaryLightDarker</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EmergencyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:hint">#454343</item>
    </style>

    <style name="Theme.EmergencyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EmergencyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>